{
  "name": "iboti-ui",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/styles.css",
    "./config": "./dist/tailwind.css"
  },
  "files": ["dist"],
  "private": true,
  "scripts": {
    "build": "bun run build:code && bun run build:css",
    "build:code": "tsc",
    "build:css": "tailwindcss -i ./tailwind.css -o ./dist/styles/styles.css && cp ./tailwind.css ./dist/tailwind.css"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
